SyntheticDataset_same_wl_dL.eps_min = 1.0
SyntheticDataset_same_wl_dL.eps_max = 8.0
SyntheticDataset_same_wl_dL.dataset_size = 50000
SyntheticDataset_same_wl_dL.zoom_eps_list = [2,5,10,20]
